<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="IcButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/spaceLarge</item>
        <item name="fontPath">fonts/Brown-Bold.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:minHeight">0dp</item>

    </style>

    <style name="ButtonFillWhite" parent="IcButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/background_fill_white</item>
    </style>

    <style name="ButtonFillAccent" parent="IcButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_fill_accent</item>
    </style>

    <style name="ButtonFillPrimary" parent="IcButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_fill_primary</item>
    </style>

    <style name="ButtonBorderWhite" parent="IcButton">
        <item name="android:background">@drawable/background_border_white</item>
    </style>

    <style name="ButtonBorderAccent" parent="IcButton">
        <item name="android:background">@drawable/background_border_accent</item>
    </style>

    <style name="ButtonPlainWhite" parent="IcButton">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:background">@color/colorTransperant</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TitlePrimary" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Bold.ttf</item>
        <item name="android:textSize">@dimen/textExtraLarge</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TitleSecondary" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Bold.ttf</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="CaptionLarge" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="CaptionMedium" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="CaptionMediumLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="CaptionSmall" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="CaptionSmallLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="RegularEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/spaceLarge</item>
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@drawable/background_fill_white</item>
    </style>

    <style name="RegularEditTextBorder" parent="Base.Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/spaceLarge</item>
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@drawable/background_border_white</item>
    </style>

    <style name="RegularEditTextPrimary" parent="Base.Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/spaceLarge</item>
        <item name="fontPath">fonts/Brown-Regular.ttf</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@drawable/background_border_primary</item>
    </style>

    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
